{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": ".",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/facebook",
        "destination": "/index.html"
      },
      {
        "source": "/linkedin",
        "destination": "/index.html"
      },
      {
        "source": "/instagram",
        "destination": "/index.html"
      }

    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}